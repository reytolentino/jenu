<?xml version="1.0"?>
<config>
    <tabs>
        <eternal translate="label">
            <label>Zonda Extensions</label>
            <sort_order>150</sort_order>
        </eternal>
    </tabs>
    <sections>
        <eternal_cloudzoom translate="label">
            <label>Cloud Zoom</label>
            <tab>eternal</tab>
            <frontend_type>text</frontend_type>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general>
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label comment">
                            <label>Enable Module</label>
                            <comment>If disabled, images will be displayed the same as in Magento "default" theme.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <show_title translate="label comment">
                            <label>Show Title</label>
                            <comment>If set to "Yes, the title of the image will be show.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_title>
                        <title_opacity translate="label">
                            <label>Title Opacity (%)</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-percents validate-digits</validate>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title_opacity>
                        <position translate="label comment">
                            <label>Position</label>
                            <comment>Specify the position of the zoom area relative to the main image.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>eternal_cloudzoom/system_config_source_position</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </position>
                        <zoom_width translate="label comment">
                            <label>Zoom Area Width</label>
                            <comment>
                                <![CDATA[Not needed if <strong>Position</strong> is set to "Inside". Leave empty to use default.]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </zoom_width>
                        <zoom_height translate="label comment">
                            <label>Zoom Area Height</label>
                            <comment>
                                <![CDATA[Not needed if <strong>Position</strong> is set to "Inside". Leave empty to use default.]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </zoom_height>
                        <big_image_width translate="label">
                            <label>Image Width After Zooming</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </big_image_width>
                        <big_image_height translate="label comment">
                            <label>Image Height After Zooming</label>
                            <comment>Leave empty to keep aspect ratio of the image (height will be calculated automatically based on width).</comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </big_image_height>
                        <lens_opacity translate="label comment">
                            <label>Lens Opacity (%)</label>
                            <comment>Opacity of the lens pointer.</comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-percents validate-digits</validate>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </lens_opacity>
                        <tint translate="label comment">
                            <label>Tint</label>
                            <comment>If set to "Yes, the main image will be tint.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </tint>
                        <tint_opacity translate="label">
                            <label>Tint Opacity (%)</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-percents validate-digits</validate>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </tint_opacity>
                        <soft_focus translate="label comment">
                            <label>Soft Focus</label>
                            <comment>Applies a subtle blur effect to the main image. Does not work with tint.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </soft_focus>
                        <smooth_move translate="label comment">
                            <label>Smooth Move</label>
                            <comment>Amount of smoothness/drift of the zoom image as it moves. The higher the number, the smoother/more drifty the movement will be. 1 = no smoothing.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </smooth_move>
                    </fields>
                </general>
                <lightbox>
                    <label>Lightbox</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label comment">
                            <label>Use Lightbox</label>
                            <comment>If set to "Yes", lightbox will be used to zoom product images.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                    </fields>
                </lightbox>
            </groups>
        </eternal_cloudzoom>
    </sections>
</config>